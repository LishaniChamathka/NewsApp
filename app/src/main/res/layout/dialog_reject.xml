<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded_background"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_success" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request rejected by admin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="This article rejected by you"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#5F5E5E"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/viewAdminRejectArticleButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View article"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:backgroundTint="#19134B"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/backToHomeButtonAdmin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"/>
</LinearLayout>
