<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SecondScreen">

    <TextView
        android:id="@+id/skipText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="150dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#919090"/>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboard2"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breaking
                      Barriers with
                      your language"
        android:layout_marginTop="400dp"
        android:padding="40dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the 'Translate' button for instant translation"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:padding="40dp"
        android:layout_marginTop="520dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="720dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#D61C1C"
        android:text="@string/next"
        android:textSize="16sp"/>


</FrameLayout>